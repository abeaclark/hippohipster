
<h1>New User Information</h1>

<img src="<%= @current_user.avatar_link %>" >
<form action="/users"<%= @current_user.id %>" method="post">
  <input type="hidden" value="put" name="_method">
  <label for="username">Username:</label>
  <input type="text" value="<%= @current_user.username %>" name="username">
  <label for="first_name">First Name:</label>
  <input type="text" value="<%= @current_user.first_name %>" name="username">
  <label for="last_name">Last Name:</label>
  <input type="text" value="<%= @current_user.last_name %>" name="last_name">
  <label for="email">Email Address:</label>
  <input type="text" placeholder="your@email.here" name="email">

  <label for="password">Password:</label>
  <input type="password" name="email">

  <input type="submit" value="Create Profile">
</form>
